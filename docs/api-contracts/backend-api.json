{
  "openapi": "3.0.0",
  "info": {
    "title": "Codyssey API",
    "version": "1.0.0",
    "description": "API for code submission and analysis"
  },
  "paths": {
    "/api/submissions": {
      "post": {
        "summary": "Submit code for analysis",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "files": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  },
                  "code": {
                    "type": "string",
                    "description": "Raw Java code if no files are uploaded"
                  },
                  "title": {
                    "type": "string",
                    "description": "Optional title for the submission"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Submission created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "submissionId": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string",
                      "enum": ["PENDING", "PROCESSING", "COMPLETED", "FAILED"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/submissions/{id}": {
      "get": {
        "summary": "Get analysis results for a submission",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Analysis results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "submissionId": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string",
                      "enum": ["PENDING", "PROCESSING", "COMPLETED", "FAILED"]
                    },
                    "cqi": {
                      "type": "object",
                      "properties": {
                        "overall": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 100
                        },
                        "style": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 100
                        },
                        "complexity": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 100
                        },
                        "maintainability": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 100
                        },
                        "oopSmells": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 100
                        },
                        "grade": {
                          "type": "string",
                          "enum": ["A", "B", "C", "D", "E"]
                        }
                      }
                    },
                    "issues": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "tool": {
                            "type": "string",
                            "enum": ["PMD", "CHECKSTYLE", "SPOTBUGS"]
                          },
                          "rule": {
                            "type": "string"
                          },
                          "severity": {
                            "type": "string",
                            "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"]
                          },
                          "file": {
                            "type": "string"
                          },
                          "line": {
                            "type": "integer"
                          },
                          "message": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "suggestions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string"
                          },
                          "rationale": {
                            "type": "string"
                          },
                          "diff": {
                            "type": "string"
                          },
                          "impact": {
                            "type": "object",
                            "properties": {
                              "complexity": {
                                "type": "string"
                              },
                              "readability": {
                                "type": "string"
                              },
                              "oop": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    },
                    "metrics": {
                      "type": "object",
                      "properties": {
                        "cyclomaticComplexity": {
                          "type": "number"
                        },
                        "duplicationPercentage": {
                          "type": "number"
                        },
                        "avgMethodLength": {
                          "type": "number"
                        },
                        "linesOfCode": {
                          "type": "integer"
                        },
                        "coupling": {
                          "type": "number"
                        },
                        "cohesion": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Submission not found"
          }
        }
      }
    }
  }
}
