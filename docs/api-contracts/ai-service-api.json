{
  "openapi": "3.0.0",
  "info": {
    "title": "Codyssey AI Service API",
    "version": "1.0.0",
    "description": "API for AI-powered code mentoring"
  },
  "paths": {
    "/analyze": {
      "post": {
        "summary": "Generate mentoring suggestions based on code and static analysis",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "object",
                    "properties": {
                      "files": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "path": {
                              "type": "string"
                            },
                            "content": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  },
                  "issues": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "tool": {
                          "type": "string"
                        },
                        "rule": {
                          "type": "string"
                        },
                        "severity": {
                          "type": "string"
                        },
                        "file": {
                          "type": "string"
                        },
                        "line": {
                          "type": "integer"
                        },
                        "message": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "metrics": {
                    "type": "object",
                    "properties": {
                      "cyclomaticComplexity": {
                        "type": "number"
                      },
                      "duplicationPercentage": {
                        "type": "number"
                      },
                      "avgMethodLength": {
                        "type": "number"
                      },
                      "linesOfCode": {
                        "type": "integer"
                      }
                    }
                  },
                  "usePremiumModel": {
                    "type": "boolean",
                    "description": "Whether to use the premium LLM path"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Analysis suggestions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "suggestions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string"
                          },
                          "rationale": {
                            "type": "string"
                          },
                          "diff": {
                            "type": "string"
                          },
                          "impact": {
                            "type": "object",
                            "properties": {
                              "complexity": {
                                "type": "string"
                              },
                              "readability": {
                                "type": "string"
                              },
                              "oop": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    },
                    "explanations": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
